#!/usr/bin/env node

require('colors');

const request = require('request');
const ora = require('ora');

/**
 * Padding.
 */
console.log();
process.on('exit', () => {
  console.log();
});

/**
 * List repos.
 */
const spinner = ora(` Please wait...`).start();
request({
  url: 'https://api.github.com/users/workplus-templates/repos',
  headers: {
    'User-Agent': 'workplus-cli',
  },
}, (err, res, body) => {
  spinner.stop();
  if (err) console.log(err);
  const requestBody = JSON.parse(body);
  if (Array.isArray(requestBody)) {
    const recommend = [];
    const available = [];
    const isRecommendTemplate = ({ description }) => description.toLowerCase().trim().indexOf('[recommend]') === 0;

    requestBody.forEach((repo) => {
      if (isRecommendTemplate(repo)) {
        const { description } = repo;
        recommend.push({ ...repo, description: description.replace('[Recommend]', '') });
      } else {
        available.push(repo);
      }
    });

    if (recommend.length > 0) {
      console.log('  Recommend Templates:')
      console.log()
      recommend.forEach((repo) => {
        console.log(
          `  ${  ('★').yellow 
          }  ${  repo.name.blue 
          } - ${  repo.description}`)
      });
      console.log();
    }

    if (available.length > 0) {
      console.log('  Available Templates:')
      console.log()
      available.forEach((repo) => {
        console.log(
          `  ${  ('★').green 
          }  ${  repo.name.blue 
          } - ${  repo.description}`)
      })
    }
  } else {
    console.error(requestBody.message)
  }
})
