#!/usr/bin/env node

const request = require('request');
const colors = require('colors');
const ora = require('ora');

/**
 * Padding.
 */

console.log()
process.on('exit', function () {
  console.log()
})

/**
 * List repos.
 */

const spinner = ora(` Please wait...`).start();
request({
  url: 'https://api.github.com/users/workplus-templates/repos',
  headers: {
    'User-Agent': 'workplus-cli'
  }
}, function (err, res, body) {
  spinner.stop();
  if (err) console.log(err)
  var requestBody = JSON.parse(body)
  if (Array.isArray(requestBody)) {
    const recommend = [];
    const available = [];

    const isRecommendTemplate = function(repo) {
      return repo.description.toLowerCase().trim().indexOf('[recommend]') === 0;
    };

    requestBody.forEach(function (repo) {
      if (isRecommendTemplate(repo)) {
        repo.description = repo.description.replace('[Recommend]', '');
        recommend.push(repo);
      } else {
        available.push(repo);
      }
    });

    if (recommend.length > 0) {
      console.log('  Recommend Templates:')
      console.log()
      recommend.forEach(function (repo) {
        console.log(
          '  ' + ('★').yellow +
          '  ' + repo.name.blue +
          ' - ' + repo.description)
      });
      console.log();
    }

    if (available.length > 0) {
      console.log('  Available Templates:')
      console.log()
      available.forEach(function (repo) {
        console.log(
          '  ' + ('★').green +
          '  ' + repo.name.blue +
          ' - ' + repo.description)
      })
    }

  } else {
    console.error(requestBody.message)
  }
})
