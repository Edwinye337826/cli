#!/usr/bin/env node

let program = require('commander');
let figlet = require('figlet');

if (process.argv.length < 3) {
  console.log('');
  console.log(figlet.textSync("workplus"));
  console.log(' ===========================================');
}

program
  .version(require('../package').version)
  .usage('<command> [options]')
  .command('start <template> [project]', 'generate a new project from a template')
  .command('list', 'list available official templates')
  .command('server', 'http-server like, a local static server')
  .parse(process.argv);
